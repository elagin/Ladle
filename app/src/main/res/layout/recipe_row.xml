<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background">

        <ImageView
            android:id="@+id/rec_img_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/btn_star_big_on"/>

        <TextView
            android:id="@+id/rec_name_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rec_total_time"
            android:layout_toRightOf="@+id/rec_img_star"
            android:text="Имя"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/rec_desc_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rec_name_row"
            android:layout_below="@+id/rec_name_row"
            android:maxLines="2"
            android:text="Описание"
            android:textSize="20dp"
            android:layout_alignRight="@+id/rec_total_time" />

        <TextView
            android:id="@+id/rec_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/imageViewClock"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/imageViewClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            app:srcCompat="@android:drawable/ic_menu_recent_history"/>

    </RelativeLayout>
</TableRow>